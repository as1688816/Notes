<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:NotesApp.Converters">

    <conv:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <!-- Colors -->
    <SolidColorBrush x:Key="SidebarBg" Color="#F2F2F7"/>
    <SolidColorBrush x:Key="EditorBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#007AFF"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#8E8E93"/>
    <SolidColorBrush x:Key="BorderGray" Color="#E5E5EA"/>
    <SolidColorBrush x:Key="HoverBg" Color="#E8E8ED"/>
    <SolidColorBrush x:Key="SelectedBg" Color="#007AFF"/>

    <!-- Search Box -->
    <Style x:Key="SearchBox" TargetType="TextBox">
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="#E8E8ED"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#1C1C1E"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                        <Grid>
                            <TextBlock Text="搜索" Foreground="#8E8E93" FontSize="13"
                                       VerticalAlignment="Center" Margin="2,0,0,0"
                                       Visibility="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource IntToVisibilityConverter}}"/>
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Toolbar Button -->
    <Style x:Key="ToolbarBtn" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoverBg}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
